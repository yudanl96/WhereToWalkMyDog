<% layout('layouts/template') %>

    <h1>Edit this place</h1>
    <form action="/places/<%=place._id%>?_method=PATCH" method="POST">
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" name="name" id="name" value="<%=place.name%>" required>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="location" id="location" class="form-control" value="<%=place.location%>" required>
        </div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" name="description" id="description"><%=place.description%></textarea>
        </div>
        <div class="mb-3">
            <label for="img" class="form-label">Image URL</label>
            <input type="url" class="form-control" name="img" id="img" value="<%=place.img%>">
        </div>
        <label for="leash">Leash required? </label>
        <div class="mb-3 form-check-inline">
            <input class="form-check-input" type="radio" name="leash" id="yes" value="true" required
                <%=(place.leash)? 'checked' : '' %>>
            <label for="yes" class="form-check-label">Yes</label>
        </div>
        <div class="mb-3 form-check-inline">
            <input class="form-check-input" type="radio" name="leash" id="no" value="false" <%=(!place.leash)? 'checked'
                : '' %>>
            <label for="no" class="form-check-label">No</label>
        </div>
        <br><button type="submit" class="btn btn-success">Let's go! Woof woof!</button>
    </form>
